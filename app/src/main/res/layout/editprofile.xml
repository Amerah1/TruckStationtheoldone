<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        tools:context=".editprofile"

        android:background="#F5CB5C">
        <!-- F5CB5C #FCE196  #ED6B69 FCE196-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/gradientbackground"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="53dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/logo" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="اسم المستخدم"
                    android:inputType="textEmailAddress"
                    android:layoutDirection="rtl"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#fff"
                    android:textDirection="rtl" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/ppp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="كلمة المرور"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"

                    android:drawablePadding="12dp"

                    android:ems="10"
                    android:gravity="right"
                    android:hint="كلمة المرور"
                    android:inputType="textPassword"
                    android:layoutDirection="rtl"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#fff"
                    android:textDirection="rtl"
                    android:textStyle="bold"
                    tools:targetApi="jelly_bean_mr1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/fff"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="رقم الجوال"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"

                    android:drawablePadding="12dp"

                    android:ems="10"
                    android:hint="رقم الجوال"
                    android:inputType="number"
                    android:layoutDirection="rtl"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#fff"
                    android:textDirection="rtl"
                    android:textStyle="bold"
                    tools:targetApi="jelly_bean_mr1" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/maili"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="البريد الالكتروني"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"

                    android:drawablePadding="12dp"

                    android:ems="10"
                    android:hint="البريد الالكتروني"
                    android:inputType="textEmailAddress"
                    android:layoutDirection="rtl"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#fff"
                    android:textDirection="rtl"
                    android:textStyle="bold"
                    tools:targetApi="jelly_bean_mr1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/ccc"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="توع المطبخ"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/cusin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"

                    android:drawablePadding="12dp"

                    android:ems="10"
                    android:hint="نــوع المطبخ"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#fff"
                    android:textDirection="rtl"
                    android:textStyle="bold"
                    tools:targetApi="jelly_bean_mr1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/ddd"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="ساعـات العمل"
                    android:textColor="#fff" />
                <EditText
                    android:id="@+id/etFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:hint="الاحد 7 مساء-2 صباحا"
                    android:inputType="textMultiLine"
                    android:lines="4" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff" />


                <Button
                    android:id="@+id/update"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/cardview_dark_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="chickInfo"
                    android:padding="16dp"
                    android:text="حفظ التغييــــرات"
                    android:textAllCaps="false"
                    android:textColor="#fff" />


            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:itemIconTint="@color/startblue"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>